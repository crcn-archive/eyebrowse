#!/usr/bin/env node

process.env.APUPPET_LOG=1
var commander = require("commander"),
browsertap       = require("..");

commander.
option("-c, --config <path>", "browsertap configuration file", String, "/usr/local/etc/browsertap/config");

function initPuppet() {
  return browsertap(require(commander.config.replace(/^\./, process.cwd()).replace("~", process.env.HOME)));
}



commander.
command("start <appName> [args]").
description("starts an application").
action(function(app) {

  var args  = process.argv.slice(4);

  initPuppet().start({ name: app,  args: args }, function(e) {
    if(e) console.error(e.stack);
  });
});



commander.parse(process.argv);